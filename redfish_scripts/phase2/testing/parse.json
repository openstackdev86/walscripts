def check_health(k,v,cloud):
    error_component = {}
    if 'health' in v.keys():
        if v['health']['Health'] == 'Critical':
            error_component = {'cloud':str(cloud),'hvname':str(k),'hvhealth':str(v['health']['Health'])}
    else:
        print("no information found for health")
    return error_component             

